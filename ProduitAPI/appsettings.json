{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  // Configuration commune (peut être utilisée par tous les environnements)
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=app.db"
  },

  // Configuration spécifique à l'environnement de développement
  "Development": {
    "ConnectionStrings": {
      "DefaultConnection": "Data Source=Devapp.db"
    }
  },

  // Configuration spécifique à l'environnement de test
  "Test": {
    "ConnectionStrings": {
      "DefaultConnection": "Data Source=Testapp.db"
    }
  },

  // Configuration spécifique à l'environnement de production
  "Production": {
    "ConnectionStrings": {
      "DefaultConnection": "Data Source=Prodapp.db"
    }
  }
}
